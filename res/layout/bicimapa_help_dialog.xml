<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AboutActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/tienda"
            android:drawablePadding="5dp"
            android:gravity="center|left"
            android:paddingBottom="2.5dp"
            android:paddingLeft="7dp"
            android:paddingTop="2.5dp"
            android:text="@string/bicycle_shop" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/parqueadero"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:paddingBottom="2.5dp"
            android:paddingLeft="7dp"
            android:paddingTop="2.5dp"
            android:text="@string/bicycle_parking" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/taller"
            android:drawablePadding="5dp"
            android:gravity="center|left"
            android:paddingBottom="2.5dp"
            android:paddingLeft="7dp"
            android:paddingTop="2.5dp"
            android:text="@string/bicycle_repair" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/atencion"
            android:drawablePadding="5dp"
            android:gravity="center|left"
            android:paddingBottom="2.5dp"
            android:paddingLeft="7dp"
            android:paddingTop="2.5dp"
            android:text="@string/atention_point" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ruta"
            android:drawablePadding="5dp"
            android:gravity="center|left"
            android:paddingBottom="2.5dp"
            android:paddingLeft="7dp"
            android:paddingTop="2.5dp"
            android:text="@string/ruta" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/elbicitante"
            android:drawablePadding="5dp"
            android:gravity="center|left"
            android:paddingBottom="2.5dp"
            android:paddingLeft="7dp"
            android:paddingTop="2.5dp"
            android:text="@string/elbicitante" />
    </LinearLayout>

</ScrollView>